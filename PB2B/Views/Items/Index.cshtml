
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LTEAdminMaster.cshtml";
}

<style>
    .backclr {
        background-color: #AB1313;
    }
</style>

<div class="panel panel-primary">
    <div class="panel-heading">
        Ürün Arama Ekranı
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-3">
                <div class="input-group">
                    <span class="input-group-addon" style="background-color:#ab1313; color:white;">
                        <i class="fa fa-search"></i>
                    </span>
                    <input type="text" name="searchparams" placeholder="Ürün Adı,Kodu,Özel Kodlar" id="TXTSearch" class="form-control" />
                </div>
                
            </div>
          
            <div class="col-lg-1">
                <button class="btn btn-primary" onclick="UrunGetir()">
                    Ara
                </button>
            </div>
        </div>
        <div id="LBLProgress" class="col-lg-12 text-center backclr" style="display:none;font-size:15pt;color:#fff;">Yükleniyor...</div>
        <div id="partialTable">

        </div>
        <script>
          function UrunGetir() {
              var searchParam = $("#TXTSearch").val();
      
              //alert(marka);
              var url = "@Url.Action("ItemListPartial","Items")";
              $("#LBLProgress").show();
              $("#partialTable").load(url + "?searchParams=" + searchParam + "", function () {
                  $("#LBLProgress").hide();
              });
          }
        </script>
    </div>
</div>



