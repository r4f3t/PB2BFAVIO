@model IEnumerable<PB2B.Entity.A_MNTL_STOK_2018>

@{
    ViewBag.Title = "Cariler";
    Layout = ViewBag.MasterGenel;//"~/Views/Shared/LTEMASTER.cshtml";
}


<div class="panel panel-primary">
    <div class="panel-heading">
        Cari Arama Ekranı
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-3">
                <label>Cari Bilgisi</label>
                <input type="text" name="searchparams" placeholder="Cari Adı,Kodu" id="TXTSearch" class="form-control" />
            </div>
            <div class="col-lg-2">
                <label>Durum( 1 Aylık)</label>
                <select id="CMBHareket" name="CMBHareket" class="form-control">
                    <option selected>Tümü</option>
                    <option>Hareketli</option>
                    <option>Hareketsiz</option>

                </select>
            </div>
            <div class="col-lg-1">
                <label>Yeni/Eski</label>
                <select id="CMBYeniEski" name="CMBYeniEski" class="form-control">
                    <option selected>Tümü</option>
                    <option>Yeni</option>
                    <option>Eski</option>
                </select>
            </div>
            <div class="col-lg-1">
                <label>#</label>
                <button class="btn btn-primary" style="width:100%;" onclick="UrunGetir()">
                    Ara
                </button>
            </div>
        </div>
        <div id="LBLProgress" class="col-lg-12 text-center" style="display:none;font-size:15pt;background:#AB1313;color:#fff;">Yükleniyor...</div>
        <div id="partialTable">

        </div>
        <script>
          function UrunGetir() {
              var searchParam = $("#TXTSearch").val();
              var hareket = $('#CMBHareket ').find('option:selected').text();
              var eski = $('#CMBYeniEski').find('option:selected').text();
             // alert(hareket);
              var url = "@Url.Action("CariListPartial","Genel")";
              $("#LBLProgress").show();
              $("#partialTable").load(url + "?searchParams=" + searchParam + "&hareket=" + hareket + "&eski=" + eski + "", function () {
                  $("#LBLProgress").hide();
              });
          }
        </script>
    </div>
</div>